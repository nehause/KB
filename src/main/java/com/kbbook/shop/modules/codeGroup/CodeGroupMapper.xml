<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kbbook.shop.modules.codeGroup.CodeGroupMapper">

    <resultMap id="resultMapObj" type="com.kbbook.shop.modules.codeGroup.CodeGroup"></resultMap>
	
	<select id="selectList" resultMap="resultMapObj">
		SELECT
			a.*
			,(select 
				count(b.CSeq)
			FROM CG b
			WHERE 1=1
				and CCG_CGSeq = a.CGseq
			) as CCount
		FROM CCG a
		WHERE 1=1
			<!-- AND CGDelNy = 0 -->
			<!-- AND CGNameKor LIKE CONCAT('%', #{searchValue}, '%') -->
			<!-- <if test="shDelNy != null and !shDelNy.equals('')">AND ifcgDelNy = #{shDelNy}</if> -->
			<!-- <choose>
				<when test="searchDelNy == 0">AND CGDelNy = 0</when>
				<when test="searchDelNy == 1">AND CGDelNy = 1</when>
				<otherwise></otherwise>
			</choose> -->
			<!-- <choose>
				<when test="searchDelNy == 0">AND CGDelNy = 0</when>
				<when test="searchDelNy == 1">AND CGDelNy = 1</when>
				<when test="searchOption == 1">AND CGSeq = #{searchValue}</when>
				<when test="searchOption == 2">AND CGNameKor LIKE CONCAT('%',#{searchValue},'%')</when>
				<when test="searchOption == 3">AND CGNameEng LIKE CONCAT('%',#{searchValue},'%')</when>
				<otherwise></otherwise>
			</choose> -->
			<choose>
				<when test="searchDelNy == 0">
					<choose>
						<when test="searchOption == 1">
							AND CGDelNy = #{searchDelNy}
							AND CGSeq = #{searchValue}
						</when>
						<when test="searchOption == 2">
							AND CGDelNy = #{searchDelNy}
							AND CGNameKor LIKE CONCAT('%',#{searchValue},'%')
						</when>
						<when test="searchOption == 3">
							AND CGDelNy = #{searchDelNy}
							AND CGNameEng LIKE CONCAT('%',#{searchValue},'%')
						</when>
						<otherwise>
							AND CGDelNy = #{searchDelNy}
						</otherwise>
					</choose>
				</when>
				<when test="searchDelNy == 1">
					<choose>
						<when test="searchOption == 1">
							AND CGDelNy = #{searchDelNy}
							AND CGSeq = #{searchValue}
						</when>
						<when test="searchOption == 2">
							AND CGDelNy = #{searchDelNy}
							AND CGNameKor LIKE CONCAT('%',#{searchValue},'%')
						</when>
						<when test="searchOption == 3">
							AND CGDelNy = #{searchDelNy}
							AND CGNameEng LIKE CONCAT('%',#{searchValue},'%')
						</when>
						<otherwise>
							AND CGDelNy = #{searchDelNy}
						</otherwise>
						
					</choose>
				</when>
				<otherwise></otherwise>
			</choose>
	</select>

</mapper>	